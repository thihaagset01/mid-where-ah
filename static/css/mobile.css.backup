/* 
 * MidWhereAh - Clean Mobile-First CSS
 * Matches Canva screenshot design exactly
 */

/* RESET & BASE STYLES */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
}

body {
  background-color: #f5f5f5;
  color: #333;
  font-size: 14px;
  line-height: 1.5;
  overflow: hidden;
  position: relative;
  height: 100vh;
}

:root {
  --primary-color: #673AB7;
  --secondary-color: #512DA8;
  --accent-color: #FF4081;
  --text-color: #333;
  --light-text: #757575;
  --border-color: #E0E0E0;
  --background-color: #F5F5F5;
  --card-color: #FFFFFF;
  --shadow: 0 2px 5px rgba(0,0,0,0.1);
  --header-height: 60px;
  --bottom-nav-height: 80px;
  /* Clean z-index system */
  --z-map: 0;
  --z-content: 10; 
  --z-header: 100;
  --z-navigation: 200;
  --z-modal: 300;
}

/* HEADER - Matches Canva screenshot exactly */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 20px;
  z-index: var(--z-header);
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  border-bottom: 1px solid #f0f0f0;
}

.header-logo {
  width: 40px;
  height: 40px;
  margin-right: 12px;
  border-radius: 8px;
  object-fit: contain;
}

.header-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--primary-color);
  letter-spacing: -0.5px;
}

/* MAP - Full screen background */
#map {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: var(--z-map);
  background-color: #f8f9fa;
}

/* Hide Google Maps clutter */
.gm-style-cc,
.gm-style .gm-style-mtc,
.gm-fullscreen-control {
  display: none !important;
}

.gm-style .gmnoprint,
.gm-control-active,
.gm-svpc,
.gmnoprint {
  z-index: 5 !important;
}

/* LOCATION INPUTS - Clean card design like screenshot */
.locations-container {
  position: fixed;
  top: var(--header-height);
  left: 20px;
  right: 20px;
  z-index: var(--z-content);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.2);
  max-width: 400px;
  margin: 20px auto 0;
  left: 50%;
  transform: translateX(-50%);
}

/* INDIVIDUAL LOCATION CONTAINER - Clean input style */
.location-container {
  margin-bottom: 12px;
  background: #f8f9fa;
  border-radius: 12px;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  min-height: 52px;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.location-container:hover,
.location-container:focus-within {
  background: white;
  border-color: var(--primary-color);
  box-shadow: 0 4px 12px rgba(103, 58, 183, 0.15);
}

/* TRANSPORT ICONS - Cleaner design */
.transport-icon {
  width: 32px;
  height: 32px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  cursor: pointer;
  flex-shrink: 0;
  transition: all 0.2s ease;
  background: var(--primary-color);
  color: white;
}

.transport-icon:hover {
  transform: scale(1.05);
}

/* LOCATION INPUT - Clean and modern */
.location-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 16px;
  padding: 8px 0;
  outline: none;
  color: #333;
  font-weight: 400;
}

.location-input::placeholder {
  color: #9E9E9E;
  font-size: 16px;
}

/* REMOVE BUTTON - Subtle */
.remove-person-btn {
  width: 24px;
  height: 24px;
  border-radius: 6px;
  border: none;
  background: #f0f0f0;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  opacity: 0;
}

.location-container:hover .remove-person-btn {
  opacity: 1;
}

.remove-person-btn:hover {
  background: #ff4444;
  color: white;
}

/* FLOATING ADD BUTTON - Bottom right like screenshot */
#add-person-btn {
  position: fixed;
  bottom: calc(var(--bottom-nav-height) + 20px);
  right: 20px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background: var(--primary-color);
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  box-shadow: 0 4px 20px rgba(103, 58, 183, 0.4);
  cursor: pointer;
  z-index: var(--z-content);
  transition: all 0.3s ease;
}

#add-person-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 24px rgba(103, 58, 183, 0.6);
}

/* FIND CENTRAL BUTTON - Hidden by default */
.find-central-btn {
  position: fixed;
  bottom: calc(var(--bottom-nav-height) + 90px);
  right: 20px;
  width: 48px;
  height: 48px;
  background: #4CAF50;
  border: none;
  border-radius: 50%;
  display: none;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 18px;
  box-shadow: 0 4px 16px rgba(76, 175, 80, 0.4);
  cursor: pointer;
  z-index: var(--z-content);
  transition: all 0.3s ease;
}

.find-central-btn.active {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8px 16px;
  color: #999;
  font-size: 11px;
  font-weight: 500;
  transition: all 0.2s ease;
  cursor: pointer;
  min-width: 60px;
}

.nav-item.active {
  color: var(--primary-color);
}

.nav-item i {
  font-size: 22px;
  margin-bottom: 4px;
}

.nav-item-center {
  position: relative;
}

.center-fab {
  width: 56px;
  height: 56px;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4px 16px rgba(103, 58, 183, 0.3);
  position: relative;
  top: -12px;
  transition: all 0.3s ease;
}

.center-fab:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 20px rgba(103, 58, 183, 0.4);
}

/* CREATE POPUP */
.nav-create-popup {
  position: absolute;
  left: 50%;
  bottom: 60px;
  transform: translateX(-50%);
  width: 160px;
  height: 160px;
  background: rgba(103, 58, 183, 0.05);
  border-radius: 50%;
  transition: all 0.3s ease;
  pointer-events: none;
  z-index: -1;
}

.nav-create-popup.hidden {
  opacity: 0;
  transform: translateX(-50%) scale(0.8);
}

.pop-icon {
  position: absolute;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: var(--primary-color);
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  pointer-events: auto;
}

.pop-icon:hover {
  transform: scale(1.1);
  background: var(--primary-color);
  color: white;
}

.pop-icon.pop1 {
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
}

.pop-icon.pop2 {
  bottom: 80px;
  left: 20px;
}

.pop-icon.pop3 {
  bottom: 80px;
  right: 20px;
}

/* AUTOFILL DROPDOWN */
.location-autofill {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  z-index: 1000;
  max-height: 200px;
  overflow-y: auto;
  margin-top: 4px;
  border: 1px solid #f0f0f0;
}

.autofill-item {
  padding: 12px 16px;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: background-color 0.2s;
}

.autofill-item:hover {
  background-color: #f8f9fa;
}

.autofill-item i {
  margin-right: 12px;
  color: var(--primary-color);
  font-size: 16px;
  width: 16px;
}

.autofill-main {
  font-weight: 500;
  color: #333;
}

.autofill-secondary {
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

/* UTILITY CLASSES */
.hidden {
  display: none !important;
}

/* RESPONSIVE */
@media (max-width: 480px) {
  .locations-container {
    left: 16px;
    right: 16px;
    margin: 16px auto 0;
    transform: none;
  }
  
  .header-title {
    font-size: 18px;
  }
  
  .nav-item {
    padding: 6px 8px;
    font-size: 10px;
  }
  
  .nav-item i {
    font-size: 20px;
  }
}